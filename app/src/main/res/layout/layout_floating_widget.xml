<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:animateLayoutChanges="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/panelControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E6121212"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp">

            <ImageView
                android:id="@+id/btnToggleMic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="@android:color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/btnToggleCam"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="@android:color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/btnSwitchCam"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:src="@android:drawable/ic_menu_rotate"
                app:tint="@android:color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnMaximizeCam"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:src="@android:drawable/ic_menu_crop"
                app:tint="@android:color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:padding="2dp"
                android:src="@android:drawable/ic_menu_gallery"
                app:tint="@android:color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/btnTheme"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="16dp"
                android:padding="2dp"
                android:src="@android:drawable/ic_menu_slideshow"
                app:tint="@android:color/white"
                android:background="?android:attr/selectableItemBackgroundBorderless"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnRecordContainer"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardBackgroundColor="#FF4444"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/btnFloatingRecord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/ic_logo_flowork"
                    app:tint="@android:color/white"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnToggleHeader"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:layout_marginStart="-4dp"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="#FF4444"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/imgToggleArrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:rotation="270"
            android:src="@drawable/ic_arrow_toggle"
            app:tint="#FFFFFF"/>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

</LinearLayout>